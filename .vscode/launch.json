{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "preview (static export)",
            "configurations": [
                "serve (out)",
                "client (chrome)"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "build (next build debug)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk",
                "--enable-source-maps"
            ],
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "build"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "serve (out)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "serve@latest",
                "out",
                "-l",
                "3000"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "autoAttachChildProcesses": true
        },
        {
            "name": "client (chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}