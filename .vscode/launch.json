{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build: npm run build (debug)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk",
                "--enable-source-maps"
            ],
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "build"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/.next/**/*.js",
                "!**/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}