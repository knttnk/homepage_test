{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve out (npx serve out)",
            "type": "shell",
            "command": "npx serve out -l 3000",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "dependsOn": "Build (npm run build)",
            "problemMatcher": {
                "owner": "custom",
                "pattern": [
                    {
                        "regexp": ".*"
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Serving!|Accepting connections|Local:",
                    "endsPattern": "Local:\\s+https?:\\/\\/"
                }
            }
        }
    ]
}
